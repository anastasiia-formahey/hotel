<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Hotel</display-name>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>

    <context-param>
        <param-name>locales</param-name>
        <param-value>en ua</param-value>
    </context-param>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.anastasiia.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityURIFilter</filter-name>
        <filter-class>com.anastasiia.web.filter.SecurityURIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityURIFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--    Security Command filter-->
    <filter>
        <filter-name>SecurityCommandFilter</filter-name>
        <filter-class>com.anastasiia.web.filter.SecurityCommandFilter</filter-class>
        <init-param>
            <param-name>manager</param-name>
            <param-value>addRoomPage addRoom editRoomPage editRoom reviewApplication insertRoomInReview deleteRoomFromReview sendRequest logout findRoomForBooking viewBooking viewApplications getRequest</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>bookRoomPage bookRoom payForBooking addApplication logout findRoomForBooking viewBooking viewApplications getRequest</param-value>
        </init-param>
        <init-param>
            <param-name>unregistered</param-name>
            <param-value>rooms viewRoom home</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>rooms viewRoom home</param-value>
        </init-param>
        <init-param>
            <param-name>outOfControl</param-name>
            <param-value>locale loginPage login signUpPage signUp about</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityCommandFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--    -->
    <listener>
        <listener-class>com.anastasiia.web.listener.ContextListener</listener-class>
    </listener>
    
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/errorPage404.jsp</location>
    </error-page>
    


</web-app>